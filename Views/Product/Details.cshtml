@model AmazonToo.Models.Product;

<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="img"><img src="@Model.Image" /></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <h3 class="h3">@Model.Name</h3>
                    <p class="description">@Model.Description</p>
                    <br />
                    <h4 class="h4">Retail Price: <span class="badge badge-pill badge-primary">$@Model.Price</span></h4>
                    <br />
                    <a class="btn btn-success" asp-action="AddToCart" asp-controller="Cart">Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>
